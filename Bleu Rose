    <section class="contact" id="contact">
        <div class="container">
            <div class="contact-content">
                <h2 class="section-title">Get In Touch</h2>
                <p>Follow us on social media to see our latest creations and updates!</p>
                <div class="social-links">
                    <a href="#" id="instagram-link" class="social-link"><i class="fab fa-instagram"></i></a>
                    <a href="#" id="facebook-link" class="social-link"><i class="fab fa-facebook-f"></i></a>
                </div>
                <p style="margin-top: 30px;">Email: <span id="contact-email">contact@bleurosehandmade.com</span></p>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">Bleu Rose Handmade</div>
                <div class="footer-links">
                    <a href="#home">Home</a>
                    <a href="#products">Products</a>
                    <a href="#about">About</a>
                    <a href="#contact">Contact</a>
                </div>
                <div class="copyright">© 2023 Bleu Rose Handmade. All rights reserved.</div>
            </div>
        </div>
    </footer>

    <!-- Admin Panel -->
    <div class="admin-panel" id="admin-button">
        <i class="fas fa-lock"></i> Admin Panel
    </div>

    <!-- Admin Form -->
    <div class="overlay" id="overlay"></div>
    <div class="admin-form" id="admin-form">
        <div class="admin-tabs">
            <div class="admin-tab active" data-tab="products">Products</div>
            <div class="admin-tab" data-tab="website">Website Info</div>
        </div>

        <!-- Products Tab -->
        <div class="tab-content active" id="products-tab">
            <h3>Manage Products</h3>
            <div class="form-group">
                <label for="product-name">Product Name</label>
                <input type="text" id="product-name" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="product-price">Price</label>
                <input type="text" id="product-price" placeholder="Enter price">
            </div>
            <div class="form-group">
                <label for="product-image-upload">Product Image</label>
                <input type="file" id="product-image-upload" accept="image/*">
                <div class="image-preview" id="product-image-preview">
                    <span>Image Preview</span>
                </div>
            </div>
            <div class="form-buttons">
                <button class="btn btn-primary" id="add-product">Add Product</button>
            </div>

            <h4 style="margin-top: 30px;">Existing Products</h4>
            <div class="product-list" id="product-list">
                <!-- Product items will be added here -->
            </div>
        </div>

        <!-- Website Info Tab -->
        <div class="tab-content" id="website-tab">
            <h3>Edit Website Information</h3>
            <div class="form-group">
                <label for="hero-title-input">Hero Title</label>
                <input type="text" id="hero-title-input" placeholder="Enter hero title">
            </div>
            <div class="form-group">
                <label for="hero-subtitle-input">Hero Subtitle</label>
                <input type="text" id="hero-subtitle-input" placeholder="Enter hero subtitle">
            </div>
            <div class="form-group">
                <label for="about-title-input">About Title</label>
                <input type="text" id="about-title-input" placeholder="Enter about title">
            </div>
            <div class="form-group">
                <label for="about-text-1">About Text 1</label>
                <textarea id="about-text-1-input" placeholder="Enter about text"></textarea>
            </div>
            <div class="form-group">
                <label for="about-text-2">About Text 2</label>
                <textarea id="about-text-2-input" placeholder="Enter about text"></textarea>
            </div>
            <div class="form-group">
                <label for="about-text-3">About Text 3</label>
                <textarea id="about-text-3-input" placeholder="Enter about text"></textarea>
            </div>
            <div class="form-group">
                <label for="about-image-upload">About Image</label>
                <input type="file" id="about-image-upload" accept="image/*">
                <div class="image-preview" id="about-image-preview">
                    <span>Image Preview</span>
                </div>
            </div>
            <div class="form-group">
                <label for="instagram-input">Instagram URL</label>
                <input type="text" id="instagram-input" placeholder="Enter Instagram URL">
            </div>
            <div class="form-group">
                <label for="facebook-input">Facebook URL</label>
                <input type="text" id="facebook-input" placeholder="Enter Facebook URL">
            </div>
            <div class="form-group">
                <label for="email-input">Contact Email</label>
                <input type="email" id="email-input" placeholder="Enter contact email">
            </div>
            <div class="form-buttons">
                <button class="btn btn-primary" id="save-website-info">Save Changes</button>
            </div>
        </div>

        <div class="form-buttons" style="margin-top: 20px;">
            <button class="btn btn-secondary" id="close-form">Close</button>
        </div>
    </div>

    <script>
        // DOM Elements
        const productsContainer = document.getElementById('products-container');
        const adminButton = document.getElementById('admin-button');
        const adminForm = document.getElementById('admin-form');
        const overlay = document.getElementById('overlay');
        const closeForm = document.getElementById('close-form');
        const addProductBtn = document.getElementById('add-product');
        const productList = document.getElementById('product-list');
        const adminTabs = document.querySelectorAll('.admin-tab');
        const tabContents = document.querySelectorAll('.tab-content');
        const saveWebsiteInfoBtn = document.getElementById('save-website-info');

        // Image upload elements
        const productImageUpload = document.getElementById('product-image-upload');
        const productImagePreview = document.getElementById('product-image-preview');
        const aboutImageUpload = document.getElementById('about-image-upload');
        const aboutImagePreview = document.getElementById('about-image-preview');

        // Website info elements
        const heroTitleInput = document.getElementById('hero-title-input');
        const heroSubtitleInput = document.getElementById('hero-subtitle-input');
        const aboutTitleInput = document.getElementById('about-title-input');
        const aboutText1Input = document.getElementById('about-text-1-input');
        const aboutText2Input = document.getElementById('about-text-2-input');
        const aboutText3Input = document.getElementById('about-text-3-input');
        const instagramInput = document.getElementById('instagram-input');
        const facebookInput = document.getElementById('facebook-input');
        const emailInput = document.getElementById('email-input');

        // Sample initial products
        const initialProducts = [
            { 
                id: 1, 
                name: "Handmade Ceramic Mug", 
                price: "$28.00", 
                image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='300' height='250' viewBox='0 0 300 250'><rect width='300' height='250' fill='%23c5d5e6'/><text x='150' y='125' font-family='Arial' font-size='18' fill='%237b9acc' text-anchor='middle'>Handmade Ceramic Mug</text></svg>" 
            },
            { 
                id: 2, 
                name: "Knitted Scarf", 
                price: "$35.00", 
                image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='300' height='250' viewBox='0 0 300 250'><rect width='300' height='250' fill='%23f5f1e6'/><text x='150' y='125' font-family='Arial' font-size='18' fill='%23d4a5a5' text-anchor='middle'>Knitted Scarf</text></svg>" 
            },
            { 
                id: 3, 
                name: "Personalized Jewelry Box", 
                price: "$42.00", 
                image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='300' height='250' viewBox='0 0 300 250'><rect width='300' height='250' fill='%23e8dfce'/><text x='150' y='125' font-family='Arial' font-size='18' fill='%23a58f86' text-anchor='middle'>Personalized Jewelry Box</text></svg>" 
            },
            { 
                id: 4, 
                name: "Scented Soy Candle", 
                price: "$22.00", 
                image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='300' height='250' viewBox='0 0 300 250'><rect width='300' height='250' fill='%23f5f1e6'/><text x='150' y='125' font-family='Arial' font-size='18' fill='%237b9acc' text-anchor='middle'>Scented Soy Candle</text></svg>" 
            }
        ];

        // Load data from localStorage or use initial data
        let products = JSON.parse(localStorage.getItem('bleuRoseProducts')) || initialProducts;
        let websiteInfo = JSON.parse(localStorage.getItem('bleuRoseWebsiteInfo')) || {};

        // Initialize the page
        function initializePage() {
            displayProducts();
            updateProductList();
            loadWebsiteInfo();
            applyWebsiteInfo();
        }

        // Display products on the page
        function displayProducts() {
            productsContainer.innerHTML = '';
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <div class="product-image">
                        <img src="${product.image}" alt="${product.name}">
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">${product.name}</h3>
                        <p class="product-price">${product.price}</p>
                    </div>
                `;
                productsContainer.appendChild(productCard);
            });
        }

        // Update the product list in admin panel
        function updateProductList() {
            productList.innerHTML = '';
            products.forEach(product => {
                const productItem = document.createElement('div');
                productItem.className = 'product-item';
                productItem.innerHTML = `
                    <div class="product-item-info">
                        <div class="product-item-name">${product.name}</div>
                        <div class="product-item-price">${product.price}</div>
                    </div>
                    <div class="product-actions">
                        <button class="btn btn-danger" data-id="${product.id}" onclick="removeProduct(${product.id})">Remove</button>
                    </div>
                `;
                productList.appendChild(productItem);
            });
        }

        // Load website info into form
        function loadWebsiteInfo() {
            heroTitleInput.value = websiteInfo.heroTitle || '';
            heroSubtitleInput.value = websiteInfo.heroSubtitle || '';
            aboutTitleInput.value = websiteInfo.aboutTitle || '';
            aboutText1Input.value = websiteInfo.aboutText1 || '';
            aboutText2Input.value = websiteInfo.aboutText2 || '';
            aboutText3Input.value = websiteInfo.aboutText3 || '';
            instagramInput.value = websiteInfo.instagram || '';
            facebookInput.value = websiteInfo.facebook || '';
            emailInput.value = websiteInfo.email || '';
            
            if (websiteInfo.aboutImage) {
                aboutImagePreview.innerHTML = `<img src="${websiteInfo.aboutImage}" alt="About Image Preview">`;
            }
        }

        // Apply website info to the page
        function applyWebsiteInfo() {
            if (websiteInfo.heroTitle) document.getElementById('hero-title').textContent = websiteInfo.heroTitle;
            if (websiteInfo.heroSubtitle) document.getElementById('hero-subtitle').textContent = websiteInfo.heroSubtitle;
            if (websiteInfo.aboutTitle) document.getElementById('about-title').textContent = websiteInfo.aboutTitle;
            if (websiteInfo.aboutText1) document.getElementById('about-text-1').textContent = websiteInfo.aboutText1;
            if (websiteInfo.aboutText2) document.getElementById('about-text-2').textContent = websiteInfo.aboutText2;
            if (websiteInfo.aboutText3) document.getElementById('about-text-3').textContent = websiteInfo.aboutText3;
            if (websiteInfo.aboutImage) document.getElementById('about-image').src = websiteInfo.aboutImage;
            if (websiteInfo.instagram) document.getElementById('instagram-link').href = websiteInfo.instagram;
            if (websiteInfo.facebook) document.getElementById('facebook-link').href = websiteInfo.facebook;
            if (websiteInfo.email) document.getElementById('contact-email').textContent = websiteInfo.email;
        }

        // Remove a product
        function removeProduct(id) {
            if (confirm('Are you sure you want to remove this product?')) {
                products = products.filter(product => product.id !== id);
                localStorage.setItem('bleuRoseProducts', JSON.stringify(products));
                displayProducts();
                updateProductList();
            }
        }

        // Add a new product
        addProductBtn.addEventListener('click', () => {
            const name = document.getElementById('product-name').value;
            const price = document.getElementById('product-price').value;
            const image = productImagePreview.querySelector('img') ? productImagePreview.querySelector('img').src : '';
            
            if (name && price && image) {
                const newProduct = {
                    id: Date.now(),
                    name,
                    price,
                    image
                };
                
                products.push(newProduct);
                localStorage.setItem('bleuRoseProducts', JSON.stringify(products));
                
                displayProducts();
                updateProductList();
                
                // Reset form
                document.getElementById('product-name').value = '';
                document.getElementById('product-price').value = '';
                productImagePreview.innerHTML = '<span>Image Preview</span>';
                productImageUpload.value = '';
                
                alert('Product added successfully!');
            } else {
                alert('Please fill in all fields and upload an image.');
            }
        });

        // Save website info
        saveWebsiteInfoBtn.addEventListener('click', () => {
            websiteInfo = {
                heroTitle: heroTitleInput.value,
                heroSubtitle: heroSubtitleInput.value,
                aboutTitle: aboutTitleInput.value,
                aboutText1: aboutText1Input.value,
                aboutText2: aboutText2Input.value,
                aboutText3: aboutText3Input.value,
                aboutImage: aboutImagePreview.querySelector('img') ? aboutImagePreview.querySelector('img').src : websiteInfo.aboutImage,
                instagram: instagramInput.value,
                facebook: facebookInput.value,
                email: emailInput.value
            };
            
            localStorage.setItem('bleuRoseWebsiteInfo', JSON.stringify(websiteInfo));
            applyWebsiteInfo();
            alert('Website information updated successfully!');
        });

        // Handle image upload for products
        productImageUpload.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    productImagePreview.innerHTML = `<img src="${e.target.result}" alt="Product Image Preview">`;
                }
                reader.readAsDataURL(file);
            }
        });

        // Handle image upload for about section
        aboutImageUpload.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    aboutImagePreview.innerHTML = `<img src="${e.target.result}" alt="About Image Preview">`;
                }
                reader.readAsDataURL(file);
            }
        });

        // Admin tabs functionality
        adminTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabId = tab.getAttribute('data-tab');
                
                // Update active tab
                adminTabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                // Show active tab content
                tabContents.forEach(content => {
                    content.classList.remove('active');
                    if (content.id === `${tabId}-tab`) {
                        content.classList.add('active');
                    }
                });
            });
        });

        // Show admin form
        adminButton.addEventListener('click', () => {
            const password = prompt('Please enter the admin password:');
            // In a real application, this would be a secure server-side check
            if (password === 'bleurose123') {
                adminForm.style.display = 'block';
                overlay.style.display = 'block';
            } else {
                alert('Incorrect password. Only the site owner can access this feature.');
            }
        });

        // Close admin form
        closeForm.addEventListener('click', () => {
            adminForm.style.display = 'none';
            overlay.style.display = 'none';
        });

        // Initialize the page
        initializePage();
    </script>
</body>
</html>
